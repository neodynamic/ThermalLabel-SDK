<UserControl x:Class="TLWindowsEditorWPFDemo.ImageFileUIEditorUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TLWindowsEditorWPFDemo"
             mc:Ignorable="d" 
             Name="_uc">
    <Grid Height="22">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="30"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txt" Text="{Binding Value, ElementName=_uc}" BorderThickness="0"/>
        <Button Click="Button_Click" Grid.Column="1" FontWeight="Bold">· · ·</Button>
    </Grid>
</UserControl>
