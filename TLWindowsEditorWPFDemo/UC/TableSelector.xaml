<UserControl x:Class="TLWindowsEditorWPFDemo.TableSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TLWindowsEditorWPFDemo"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Name="myBorder" Background="White" BorderThickness="1" BorderBrush="LightGray" UseLayoutRounding="True" SnapsToDevicePixels="True">
        <StackPanel x:Name="myPanel" Orientation="Vertical" UseLayoutRounding="True" SnapsToDevicePixels="True">
            <Canvas x:Name="myCanvas" UseLayoutRounding="True" SnapsToDevicePixels="True"></Canvas>
            <Label x:Name="lblTableSize" HorizontalContentAlignment="Center"></Label>
        </StackPanel>
    </Border>
</UserControl>
