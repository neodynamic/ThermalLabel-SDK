<Window x:Class="TLWindowsEditorWPFDemo.ColorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TLWindowsEditorWPFDemo"
        xmlns:tk="clr-namespace:Xceed.Wpf.Toolkit;assembly=DotNetProjects.Wpf.Extended.Toolkit"
        mc:Ignorable="d"
        Title="Color" Height="430" Width="450" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <tk:ColorCanvas x:Name="colorCanvas1" Background="Transparent" Height="320"></tk:ColorCanvas>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0" Height="30">
            <Button x:Name="cmdOK" Width="80" IsDefault="True" Click="cmdOK_Click" >OK</Button>
            <Button x:Name="cmdCancel" Width="80" Margin="40 0 0 0" IsCancel="True">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
