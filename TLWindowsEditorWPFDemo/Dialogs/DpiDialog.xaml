<Window x:Class="TLWindowsEditorWPFDemo.DpiDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TLWindowsEditorWPFDemo"
        xmlns:tk="clr-namespace:Xceed.Wpf.Toolkit;assembly=DotNetProjects.Wpf.Extended.Toolkit"
        mc:Ignorable="d"
        Title="Output DPI Setting" Height="170" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <Label>Please specify a DPI output value:</Label>
        <tk:DoubleUpDown x:Name="nudDpi" FormatString="F2" Value="96" Increment="100"  Maximum="1200" Minimum="96" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0" Height="30">
            <Button x:Name="cmdOK" Width="80" IsDefault="True" Click="cmdOK_Click" >OK</Button>
            <Button x:Name="cmdCancel" Width="80" Margin="40 0 0 0" IsCancel="True">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
